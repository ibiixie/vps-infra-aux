{$DOMAIN:localhost} {
	# Override default directive priority using route
	route {
		reverse_proxy /api/* biixie_backend:3000
		reverse_proxy biixie_frontend:80
	}
}

# WWW redirect
www.{$DOMAIN:localhost} {
	redir {scheme}://{$DOMAIN:localhost}{uri}
}

